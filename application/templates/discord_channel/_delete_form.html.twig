<form method="post" action="{{ path('admin_discord_channel_delete', {'id': discord_channel.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discord_channel.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
