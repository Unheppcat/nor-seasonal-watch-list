    <div class="col-md-6">
        {{ form_row(form.anilistId, {'label': 'Anilist show ID'}) }}
    </div>
</div>
{% if mode == 'edit' %}
    <div class="row">
        <div class="col">
            {{ form_row(form.japaneseTitle) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.fullJapaneseTitle) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.englishTitle) }}
        </div>
    </div>
