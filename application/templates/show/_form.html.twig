{#    </div>#}
    <div class="row">
        <div class="col">
            {{ form_row(form.coverImageMedium, {'label': 'Cover image small URL'}) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.coverImageLarge, {'label': 'Cover image medium URL'}) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.siteUrl, {'label': 'Anilist show page URL'}) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.malId, {'label': 'MyAnimeList show ID'}) }}
        </div>
    </div>

{% endif %}
<div class="row">
    <div class="col-md-6">
        <div class="card mt-3 mb-3">
            <div class="card-body">
                {{ form_row(form.seasons) }}
            </div>
        </div>
    </div>
</div>
{% if show.firstShow %}
    <div class="row">
        <div class="col-md-6">
            <div class="card mt-3 mb-3">
                <div class="card-body">
                    <dl>
                        <dt>Related show</dt>
                        <dd>{{ show.firstShow.getAllTitles|raw }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="d-none">
        {{ form_row(form.relatedShows) }}
    </div>
{% else %}
    <div class="row">
        <div class="col-md-6">
            <div class="card mt-3 mb-3">
                <div class="card-body">
                    {{ form_row(form.relatedShows) }}
                </div>
            </div>
        </div>
    </div>
{% endif %}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.excludeFromElections) }}
    </div>
</div>
<div class="row py-3">
    <div class="col">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {% if mode == 'edit' %}
            {{ form_widget(form.updateFromAnilist, {'attr': {'class': 'btn btn-warning ms-2'}}) }}
        {% endif %}
    </div>
</div>
{{ form_end(form) }}
