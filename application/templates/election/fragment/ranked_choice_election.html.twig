<tr>
    <th>Results</th>
    <td class="pt-0">
        <table class="table">
            <thead>
            <tr>
                <th class="col-md-6 border-top-0 align-text-top">Show</th>
                <th class="col-md-5 border-top-0 align-text-top">Details</th>
                <th class="col-md-1 text-end border-top-0 align-text-top">Rank</th>
            </tr>
            </thead>
            <tbody>
            {% for voteTally in voteTallies %}
                <tr>
                    <td class="col-md-6">
                        <i>{{ voteTally.getShowCombinedTitle }}</i>
                        {% if voteTally.getRelatedShowNames is not empty %}
                            <br />Additional seasons:
                            <ul>
                                {% for name in voteTally.getRelatedShowNames %}
                                    <li><i>{{ name }}</i></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </td>
                    <td class="col-md-5">
                        <small>{{ voteTally.getRankStats|raw }}</small>
                    </td>
                    <td class="col-md-1 text-end">
                        {{ voteTally.getFinalRank }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="mt-3 mb-3">
            <a
                    class="btn btn-primary"
                    target="_blank"
                    href="{{ path('admin_election_export', { 'id': election.id }) }}"
            >
                Export vote tally
            </a>
        </div>
    </td>
</tr>
