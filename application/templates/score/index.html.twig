{% extends 'base.html.twig' %}

{% block title %}Scores{% endblock %}

{% block body %}
    <span class="float-end">
        <a class="btn btn-success" href="{{ path('admin_score_new') }}">Create new</a>
    </span>
    <h1>Scores</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nickname</th>
                <th>Slug</th>
                <th>Rank order</th>
                <th>Value</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for score in scores %}
            <tr>
                <td>{{ score.id }}</td>
                <td>{{ score.name }}</td>
                <td class="text-{{ score.colorValue }}">
                    {{ score.nickname }}
                </td>
                <td>{{ score.slug }}</td>
                <td>{{ score.rankOrder }}</td>
                <td>{{ score.value }}</td>
                <td>
                    {{ score.colorValue }}
                    <div
                            class="bg-{{ score.colorValue }}"
                            style="width:20px;height:20px;padding:0;"
                    >
                        &nbsp;
                    </div>
                </td>
                <td class="col-sm-2">
                    <span class="float-end">
                        <a class="btn btn-primary" href="{{ path('admin_score_show', {'id': score.id}) }}">show</a>
                        <a class="btn btn-secondary" href="{{ path('admin_score_edit', {'id': score.id}) }}">edit</a>
                    </span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <span class="float-end">
        <a class="btn btn-success" href="{{ path('admin_score_new') }}">Create new</a>
    </span>
{% endblock %}
