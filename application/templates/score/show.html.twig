{% extends 'base.html.twig' %}

{% block title %}Score{% endblock %}

{% block body %}
    <h1>Score</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ score.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ score.name }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ score.nickname }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ score.slug }}</td>
            </tr>
            <tr>
                <th>Rank order</th>
                <td>{{ score.rankOrder }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ score.value }}</td>
            </tr>
            <tr>
                <th>Color value</th>
                <td>{{ score.colorValue }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td><i class="bi {{ score.icon }}"></i></td>
            </tr>
        </tbody>
    </table>

    <div class="float-end">
        {{ include('score/_delete_form.html.twig') }}
    </div>

    <a class="btn btn-light" href="{{ path('admin_score_index') }}">Back to list</a>

    <a class="btn btn-secondary" href="{{ path('admin_score_edit', {'id': score.id}) }}">Edit</a>

{% endblock %}
