{% extends 'base.html.twig' %}

{% block title %}Edit Season{% endblock %}

{% block body %}
    <h1>Edit Season</h1>

    <div class="row">
        <div class="col-lg-6 col-md-9">
            {{ include('season/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
    </div>

    <div class="float-end">
        {% if season.canBeDeleted %}
            {{ include('season/_delete_form.html.twig') }}
        {% else %}
            <p class="text-danger">Cannot be deleted because of linked shows or elections</p>
        {% endif %}
    </div>

    <a class="btn btn-light" href="{{ path('admin_season_index') }}">Back to list</a>

{% endblock %}
