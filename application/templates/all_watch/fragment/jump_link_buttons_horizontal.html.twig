<div class="row">
    <div class="col-12 d-flex align-items-center gap-2">
        {% if row.show.anilistShowUrl %}
            <a
                    href="{{ row.show.anilistShowUrl }}"
                    target="_blank"
                    class="jump-link d-inline-flex align-items-center text-decoration-none"
            >
              <span class="text-decoration-underline">AL</span>
              <span class="bi bi-box-arrow-up-right d-inline-flex align-items-center"></span>
            </a>
        {% endif %}
        {% if row.show.malShowUrl %}
            <a
                    href="{{ row.show.malShowUrl }}"
                    target="_blank"
                    class="jump-link d-inline-flex align-items-center text-decoration-none"
            >
              <span class="text-decoration-underline">MAL</span>
              <span class="bi bi-box-arrow-up-right d-inline-flex align-items-center"></span>
            </a>
        {% endif %}
        <a class="jump-link" href="{{ path('my_watch_index') }}#show_target_{{ row.show.id }}">
            Personal
        </a>
        {% if row.scores and row.scoreCount > 0 %}
                <a
                        class="btn btn-outline-inverse ms-auto px-2 py-0"
                        data-bs-toggle="collapse"
                        href="#collapseRow{{ key }}"
                        aria-expanded="false"
                        aria-controls="collapseRow{{ key }}"
                >Details</a>
        {% endif %}
    </div>
</div>
