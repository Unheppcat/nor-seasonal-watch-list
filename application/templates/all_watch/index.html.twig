{% extends 'base.html.twig' %}

{% block title %}Community Watch List{% endblock %}

{% block stylesheets %}
    <link href="/chart_js/Chart.min.css" rel="stylesheet">
{% endblock %}

{% block second_navbar %}
    <nav id="second_nav" class="navbar navbar-expand-md navbar-light fixed-top bg-light d-block d-lg-none" style="top:3.53rem;z-index:1000;">
        <div class="container-fluid">
            <form class="d-flex">
                <label class="pe-2 pt-2" for="select_show">Show</label>
                <select id="select_show" class="form-control me-2">
                    {% for key, row in data %}
                        <option value="show_target_{{ key }}">{{ row.show.shortTitle }}</option>
                    {% endfor %}
                </select>
            </form>
        </div>
    </nav>
{% endblock %}

{% block body %}
    <div class="d-block d-lg-none">
        <div class="row">
            <div class="col">
                <a style="position:relative;top:-7rem;z-index:-100;" id="show_target_top"></a>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-10" style="margin-top: 1rem;">&nbsp;</div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-12">
            <div class="float-end pb-2 ps-2">
                <form class="d-flex">
                    <label class="nav-item pe-2 pt-2" for="select_season">Season</label>
                    <select id="select_season" class="form-control me-3">
                        {% for season in seasons %}
                            <option
                                    value="{{ season.id }}"
                                    {% if season.id == selectedSeasonId %} selected="selected" {% endif %}
                            >{{ season.name }}</option>
                        {% endfor %}
                    </select>
                </form>
            </div>
            <h1>Community Watch List</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>
                Here is a summary of NoR community opinions on shows airing this season.
                Not the season you are interested in? Change it (above). You can also
                <a href="{{ path('my_watch_index') }}">enter</a> your own opinions and
                <a href="{{ path('my_vote') }}">vote</a> for discussion channels (when voting is open).
            </p>
        </div>
    </div>

    <div class="row mb-2 pb-2 border-bottom border-top pt-2 d-none d-lg-flex">
        <div class="col-md-2"><strong>Show</strong></div>
        <div class="col-md-2"><strong>&nbsp;</strong></div>
        <div class="col-md-3"><strong>Statistics</strong></div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <strong>Activity</strong>
                </div>
                <div class="col-md-6">
                    <strong>Recommendations</strong>
                </div>
            </div>
        </div>
    </div>
    {% for key, row in data %}
        <div class="row mb-2 pb-2 border-bottom d-none d-lg-flex">
            <div class="col-md-2">
                <img class="img-fluid" src="{{ row.show.coverImage|raw }}" alt="cover image" />
            </div>
            <div class="col-md-2">
                {{ row.show.title|raw }}
                <br>
                {% if row.show.anilistShowUrl %}
                    <a
                            href="{{ row.show.anilistShowUrl }}"
                            target="_blank"
                            class="btn btn-outline-primary m-1 ms-0"
                    >Anilist</a>
                {% endif %}
                {% if row.show.malShowUrl %}
                    <a
                            href="{{ row.show.malShowUrl }}"
                            target="_blank"
                            class="btn btn-outline-primary m-1 ms-0"
                    >MAL</a>
                {% endif %}
            </div>
            <div class="col-md-3">
                <table>
                    <tbody>
                    <tr>
                        <th class="pe-3">Mood</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not null %}
                                {% if row.consolidatedScores.mood_array is not null %}
                                    <div
                                            class="mood-emoji-container"
                                            data-mood-value="{{ row.consolidatedScores.mood_array.mood_average_value }}"
                                            style="font-size:24px;"
                                    >
                                        <i class="bi bi-{{ row.consolidatedScores.mood_array.mood_emoji }}"></i>
                                    </div>
                                {% else %}
                                    &nbsp;
                                {% endif %}
                            {% else %}
                                &nbsp;
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="pe-3">Th8a should cover</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not null %}
                                {{ row.consolidatedScores.th8a_count }}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="pe-3">Should watch</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not empty %}
                                {{ row.consolidatedScores.yes_count }}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="pe-3">Should avoid</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not null %}
                                {{ row.consolidatedScores.no_count }}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="pe-3">Recommendations</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not null %}
                                {% if row.consolidatedScores.all_count is not null %}
                                    {{ row.consolidatedScores.all_count }}
                                {% else %}
                                    0
                                {% endif %}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="pe-3">Average</th>
                        <td class="text-center">
                            {% if row.consolidatedScores is not null %}
                                {% if row.consolidatedScores.mood_array is not null %}
                                    {{ row.consolidatedScores.mood_array.mood_average_value|round(1) }}
                                {% else %}
                                    0
                                {% endif %}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        {% if row.consolidatedActivities %}
                            <canvas width="250"
                                    height="200"
                                    id="bar_activities_{{ row.show.id }}"
                                    class="all_watch_bar_activity_chart"
                                    data-scores="{{ row.consolidatedActivities.activities_array }}"
                                    data-maxscore="{{ row.maxActivityCount }}"
                            ></canvas>
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </div>
                    <div class="col-xs-12 col-md-6">
                        {% if row.consolidatedScores.all_count > 0 %}
                            <canvas width="250"
                                    height="200"
                                    id="bar_scores_{{ row.show.id }}"
                                    class="all_watch_bar_score_chart"
                                    data-scores="{{ row.consolidatedScores.scores_array }}"
                                    data-maxscore="{{ row.maxScore }}"
                            ></canvas>
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {% if row.scores and row.scoreCount > 0%}
                            <div>
                                <a
                                        class="btn btn-outline-primary mt-3 mb-3"
                                        data-bs-toggle="collapse"
                                        href="#collapseRow{{ key }}"
                                        aria-expanded="false"
                                        aria-controls="collapseExample"
                                >Details</a>
                            </div>
                            <div class="collapse" id="collapseRow{{ key }}">
                                <table class="table table-sm">
                                    <tr class="d-flex">
                                        <th class="col-4">User</th>
                                        <th class="col-4 text-center">Activity</th>
                                        <th class="col-4 text-center">Recommendation</th>
                                    </tr>
                                    {% for scoreField in row.scores %}
                                        <tr class="d-flex">
                                            <td class="col-4">
                                                {{ scoreField.getUser.getDiscordUsername }}
                                            </td>
                                            {% if scoreField.activity and scoreField.activity.getSlug != 'none' %}
                                                <td class="col-4 text-center table-field-{{ scoreField.activity.getColorValue }}">
                                                    {{ scoreField.activity.getNickname }}
                                                </td>
                                            {% else %}
                                                <td class="col-4">&nbsp;</td>
                                            {% endif %}
                                            {% if scoreField.score and scoreField.score.getSlug != 'none' %}
                                                <td class="col-4 text-center table-field-{{ scoreField.score.getColorValue }}">
                                                    {{ scoreField.score.getNickname }}
                                                </td>
                                            {% else %}
                                                <td class="col-4">&nbsp;</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}

                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="d-block d-lg-none">
        {% for key, row in data %}
            <div id="show_container_{{ key }}" class="show_container" data-anchorid="{{ key }}">
                <div class="row">
                    <div class="col">
                        <a style="position:relative;top:-7rem;z-index:-100;" id="show_target_{{ key }}">&nbsp;</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="{{ row.show.coverImage|raw }}" alt="cover image" />
                    </div>
                    <div class="col">
                        {{ row.show.title|raw }}
                        <br>
                        {% if row.show.anilistShowUrl %}
                            <a
                                    href="{{ row.show.anilistShowUrl }}"
                                    target="_blank"
                                    class="btn btn-outline-primary m-1 ms-0"
                            >Anilist</a>
                        {% endif %}
                        {% if row.show.malShowUrl %}
                            <a
                                    href="{{ row.show.malShowUrl }}"
                                    target="_blank"
                                    class="btn btn-outline-primary m-1 ms-0"
                            >MAL</a>
                        {% endif %}
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <table class="table table-responsive-sm">
                            <tbody>
                            <tr>
                                <td style="width:33%;"><strong>Recommendations</strong></td>
                                <td style="width:33%;"><strong>Average</strong></td>
                                <td style="width:34%;"><strong>Mood</strong></td>
                            </tr>
                            <tr>
                                <td style="width:33%;">
                                    {% if row.consolidatedScores is not null %}
                                        {% if row.consolidatedScores.all_count is not null %}
                                            {{ row.consolidatedScores.all_count }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    {% else %}
                                        0
                                    {% endif %}
                                </td>
                                <td style="width:33%;">
                                    {% if row.consolidatedScores is not null %}
                                        {% if row.consolidatedScores.mood_array is not null %}
                                            {{ row.consolidatedScores.mood_array.mood_average_value|round(1) }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    {% else %}
                                        0
                                    {% endif %}
                                </td>
                                <td style="width:34%;">
                                    {% if row.consolidatedScores is not null %}
                                        {% if row.consolidatedScores.mood_array is not null %}
                                            <div
                                                    class="mood-emoji-container"
                                                    data-mood-value="{{ row.consolidatedScores.mood_array.mood_average_value }}"
                                                    style="font-size:24px;"
                                            >
                                                <i class="bi bi-{{ row.consolidatedScores.mood_array.mood_emoji }}"></i>
                                            </div>
                                        {% else %}
                                            &nbsp;
                                        {% endif %}
                                    {% else %}
                                        &nbsp;
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <a
                                class="btn btn-outline-primary mt-0 mb-3"
                                data-bs-toggle="collapse"
                                href="#collapseRowSmall{{ key }}"
                                aria-expanded="false"
                                aria-controls="collapseExample"
                        >Details</a>
                    </div>
                </div>
                <div class="collapse" id="collapseRowSmall{{ key }}">
                    <div class="row mb-3 pb-3">
                        <div class="col">
                            <strong>Activity</strong><br>
                            <canvas width="300"
                                    height="250"
                                    id="bar_activity_{{ row.show.id }}_narrow"
                                    class="all_watch_bar_activity_chart"
                                    data-scores="{{ row.consolidatedActivities.activities_array }}"
                                    data-maxscore="{{ row.maxActivityCount }}"
                            ></canvas>
                        </div>
                    </div>
                    <div class="row mb-3 pb-3">
                        <div class="col">
                            <strong>Recommendations</strong><br>
                            <canvas width="300"
                                    height="250"
                                    id="bar_score_{{ row.show.id }}_narrow"
                                    class="all_watch_bar_score_chart"
                                    data-scores="{{ row.consolidatedScores.scores_array }}"
                                    data-maxscore="{{ row.maxScore }}"
                            ></canvas>
                        </div>
                    </div>
                    <div class="row mb-3 pb-3">
                        <div class="col">
                            {% if row.scores and row.scoreCount > 0 %}
                                <table class="table table-sm">
                                    <tr class="d-flex">
                                        <th class="col-4"><strong>User</strong></th>
                                        <th class="col-4 text-center"><strong>Activity</strong></th>
                                        <th class="col-4 text-center"><strong>Recommend</strong></th>
                                    </tr>
                                    {% for scoreField in row.scores %}
                                        <tr class="d-flex">
                                            <td class="col-4">
                                                {{ scoreField.getUser.getDiscordUsername }}
                                            </td>
                                            {% if scoreField.activity and scoreField.activity.getSlug != 'none' %}
                                                <td class="col-4 text-center table-field-{{ scoreField.activity.getColorValue }}">
                                                    {{ scoreField.activity.getNickname }}
                                                </td>
                                            {% else %}
                                                <td class="col-4">&nbsp;</td>
                                            {% endif %}
                                            {% if scoreField.score and scoreField.score.getSlug != 'none' %}
                                                <td class="col-4 text-center table-field-{{ scoreField.score.getColorValue }}">
                                                    {{ scoreField.score.getNickname }}
                                                </td>
                                            {% else %}
                                                <td class="col-4">&nbsp;</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </table>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row mt-2 mb-1 border-bottom"></div>
            </div>
        {% endfor %}

        <div class="row">
            <div class="col mb-5 mr-3">&nbsp;</div>
        </div>
    </div>

    <a class="btn btn-primary rounded-pill d-block d-lg-none" style="position: fixed; bottom: 1rem; right: 1rem; z-index:100;" href="{{ path('all_watch_index') }}#show_target_top">Top</a>

{% endblock %}

{% block body_javascripts %}
    <script src="/chart_js/Chart.min.js"></script>
    <script src="https://d3js.org/d3-color.v2.min.js"></script>
    <script src="https://d3js.org/d3-interpolate.v2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@0.7.0"></script>
    <script src="/js/SelectSeason.js?v={{ asset_version }}"></script>
    <script src="/js/SelectShow.js?v={{ asset_version }}"></script>
    <script src="/js/AllWatch.js?v={{ asset_version }}"></script>
{% endblock %}
