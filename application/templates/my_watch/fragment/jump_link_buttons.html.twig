<div class="row mt-2">
    <div class="col-4 col-xl-3 col-xxl-2 d-grid gap-0">
        {% if row.score.show.anilistShowUrl %}
            <a
                    href="{{ row.score.show.anilistShowUrl }}"
                    class="btn btn-sm btn-info m-1 ms-0 d-inline-block d-lg-none"
            >Anilist</a>
            <a
                    href="{{ row.score.show.anilistShowUrl }}"
                    target="_blank"
                    class="btn btn-sm btn-info m-1 ms-0 d-none d-lg-inline-block"
            >Anilist</a>
        {% endif %}
        {% if row.score.show.malShowUrl %}
            <a
                    href="{{ row.score.show.malShowUrl }}"
                    class="btn btn-sm btn-info m-1 ms-0 d-inline-block d-lg-none"
            >MAL</a>
            <a
                    href="{{ row.score.show.malShowUrl }}"
                    target="_blank"
                    class="btn btn-sm btn-info m-1 ms-0 d-none d-lg-inline-block"
            >MAL</a>
        {% endif %}
        <a class="btn btn-sm btn-primary m-1 ms-0 d-inline-block d-lg-none" href="{{ path('all_watch_index') }}#show_target_{{ row.score.show.getId }}">
            Community
        </a>
        <a class="btn btn-sm btn-primary m-1 ms-0 d-none d-lg-inline-block" href="{{ path('all_watch_index') }}#show_target_wide_{{ row.score.show.getId }}">
            Community
        </a>
    </div>
</div>
